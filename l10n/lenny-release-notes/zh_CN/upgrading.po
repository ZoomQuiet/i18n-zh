"\n"
"title           Debian GNU/Linux, kernel 2.6.26-1-686\n"
"root            (hd0,0)\n"
"kernel          /vmlinuz-2.6.26-1-686 root=/dev/hda6 ro\n"
"initrd          /initrd.img-2.6.26-1-686\n"
